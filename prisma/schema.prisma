generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url   = env("DATABASE_URL")
}

enum Status{
  Waiting
  OnProcess
  Done
}

model Customer {
  id  Int @id @default(autoincrement())
  name  String
  phone String
  status  Status @default(Waiting)
  weight Float
  loads Int
  price Int

}